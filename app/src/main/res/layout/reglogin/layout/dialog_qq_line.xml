<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/bg_round_white">

    <ImageView
        android:id="@+id/dialog_xv"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/dialog_qq_icon"/>
    <ImageView
        android:id="@+id/dialog_xiv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/x_miss_icon"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/dialog_xv"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_xtx_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/un_title_color"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/dialog_xtv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_link"
            android:layout_marginTop="20dp"/>
        
        <TextView
            android:id="@+id/dialog_xcopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/new_color"
            android:textSize="16sp"
            android:text="复制"/>
    </LinearLayout>
</RelativeLayout>