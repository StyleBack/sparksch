<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_link">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login_top"/>
    <LinearLayout
        android:id="@+id/head_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/login_top_head">
            <ImageView
                android:id="@+id/iv_head_top"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/head_touying"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_login_content"
        android:layout_below="@+id/head_ll"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp">
        <EditText
            android:id="@+id/ex_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_edit"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/login_edit"
            android:hint="@string/login_hint_name"
            android:inputType="phone"
            android:maxLength="11"
            android:digits="@string/txt_phone"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_edit"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/ex_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/login_edit"
                android:hint="@string/login_hint_pwd"
                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/login_tx_yzm"
                android:digits="@string/txt_phone"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/login_tx_yzm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/login_edit"
                android:textSize="14sp"
                android:text="@string/login_tx_click"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/tx_no_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_edit"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:text="@string/nu_tx_yam"
                />
        </RelativeLayout>

        <com.doschool.ahu.widget.ActionButton
            android:id="@+id/act_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/login" />

        <TextView
            android:id="@+id/tx_number_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/now_txt_color"
            android:text="@string/number_login"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_inxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/now_txt_color"
                android:textSize="14sp"
                android:text="@string/in_xieyi"/>
            <TextView
                android:id="@+id/tx_user_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/now_txt_color"
                android:textSize="14sp"
                android:text="@string/user_tiaokuan"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_edit"
            android:textSize="14sp"
            android:text="@string/login_has"/>
    </LinearLayout>
</RelativeLayout>