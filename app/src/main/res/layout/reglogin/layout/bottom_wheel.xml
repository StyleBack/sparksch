<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/fir_whll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey_link">
        <TextView
            android:id="@+id/fir_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/un_title_color"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="取消"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/un_title_color"
            android:gravity="center"
            android:text="请选择"/>
        <TextView
            android:id="@+id/fir_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/un_title_color"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="确定"/>
    </LinearLayout>
    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wheel_atmospheric="true"
        app:wheel_curtain="false"
        app:wheel_curved="true"
        app:wheel_indicator="true"
        app:wheel_indicator_color="@color/grey_link"
        app:wheel_item_text_size="18sp"
        app:wheel_selected_item_text_color="@color/title_color"
        app:wheel_indicator_size="1dp"
        app:wheel_item_space="20dp"
        app:wheel_visible_item_count="7" />
</LinearLayout>