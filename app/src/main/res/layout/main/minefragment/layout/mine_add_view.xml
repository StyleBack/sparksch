<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <include layout="@layout/mine_head"/>

    <RelativeLayout
        android:id="@+id/ver_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/xin_med"
        android:visibility="gone"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/new_color"
            android:layout_marginLeft="12dp"
            android:text="@string/up_ver"/>
        <ImageView
            android:id="@+id/ver_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:padding="14dp"
            android:src="@mipmap/ver_xicon"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ser_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/white"/>
    <include layout="@layout/mine_footer" />
</LinearLayout>