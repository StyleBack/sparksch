<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/val_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:textColor="@color/title_color"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:maxLength="11"
        android:singleLine="true"
        android:hint="请输入原手机号"/>

    <EditText
        android:id="@+id/val_xh_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:textColor="@color/title_color"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:digits="@string/txt_inputType"
        android:hint="请输入学号或通知书编号"/>

    <TextView
        android:id="@+id/val_tv_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_login_btn"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="下一步"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/un_title_color"
        android:textSize="13sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginBottom="70dp"
        android:text="@string/phone_val"/>
</LinearLayout>