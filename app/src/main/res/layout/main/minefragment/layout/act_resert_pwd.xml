<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/resert_ex_or"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/write_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp"
        android:textColor="@color/un_title_color"
        android:hint="请输入原密码"/>

    <EditText
        android:id="@+id/resert_ex_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/write_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp"
        android:textColor="@color/un_title_color"
        android:hint="新密码"/>

    <EditText
        android:id="@+id/resert_ex_re"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/write_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp"
        android:textColor="@color/un_title_color"
        android:hint="确认新密码"/>


    <TextView
        android:id="@+id/resert_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/bg_resert_draw"
        android:text="确定"/>
</LinearLayout>