<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/set_top_lay"
                android:visibility="gone"/>
            <include layout="@layout/set_mid_lay"
                android:visibility="gone"/>
            <include layout="@layout/set_bottom_lay"
                android:visibility="gone"/>

            <include layout="@layout/set_simple_layout"/>

            <TextView
                android:id="@+id/tv_loginout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_set_item"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/tx_cheng"
                android:text="@string/set_loginout"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>