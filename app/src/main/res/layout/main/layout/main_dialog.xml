<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/mainPublish_dialog_rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_color"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/mainPublish_dialog_llBtnArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="90dp"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/iv_memory"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_memory" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="发日记"
                    android:textColor="@color/dialog_txt"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainPublish_dialog_llBtnMiniCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="90dp"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="拍小视频"
                    android:textColor="@color/dialog_txt"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainPublish_dialog_llBtnPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="90dp"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="发视频"
                    android:textColor="@color/dialog_txt"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainPublish_dialog_llBtnMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainPublish_dialog_ivMenu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:padding="4dp"
            android:layout_marginTop="9dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:src="@mipmap/tab_btn_black" />
    </LinearLayout>

</RelativeLayout>