<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="15sp"
                android:textColor="@color/msg_xx_color"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/upload_msg_xx"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                >
                <TextView
                    android:id="@+id/old_child_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_color"
                    android:textSize="15sp"
                    android:text="@string/upload_old_chirld"/>
                <View
                    android:layout_width="230dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/old_child_tv"
                    android:layout_alignStart="@+id/old_child_tv"
                    android:background="@color/new_color"
                    android:layout_marginTop="3dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/title_color"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/upload_pic"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_box"
                android:layout_width="250dp"
                android:layout_height="125dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="28dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tag_tx_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="姓名"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/msg_dot_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="*"/>
                <EditText
                    android:id="@+id/load_ex_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textColor="@color/title_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:hint="请输入你的姓名"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="35dp"
                android:background="@color/grey_link"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/load_cnbain"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tag_tx_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="@string/upload_xuh_c1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/msg_dot_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="*"/>
                <EditText
                    android:id="@+id/load_ex_numsch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textColor="@color/title_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:gravity="center_vertical"
                    android:digits="@string/txt_inputType"
                    android:hint="@string/upload_hint_x1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/load_cn_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_color"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/upload_num_unname"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_link"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tag_tx_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="性别"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/msg_dot_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="*"/>
                <RelativeLayout
                    android:id="@+id/load_rlsex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/load_tsex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/title_color"
                        android:textSize="16sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/eiv_sex"
                        android:hint="请选择你的性别"/>
                    <ImageView
                        android:id="@+id/eiv_sex"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrow_into"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_link"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tag_tx_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="院系"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/msg_dot_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="*"/>
                <RelativeLayout
                    android:id="@+id/load_rlprt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/load_ex_yx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/title_color"
                        android:textSize="16sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/eiv1"
                        android:hint="请选择你的院系"/>
                    <ImageView
                        android:id="@+id/eiv1"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrow_into"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_link"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tag_tx_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="专业"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/msg_dot_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="*"/>
                <RelativeLayout
                    android:id="@+id/load_rlmaj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/load_ex_zy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/title_color"
                        android:textSize="16sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/eiv2"
                        android:hint="请选择你的专业"/>
                    <ImageView
                        android:id="@+id/eiv2"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrow_into"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_link"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/new_color"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/upload_xshenc"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>