<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="81dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_set_item">
    <RelativeLayout
        android:id="@+id/lay3_rlxq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/i3_i1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/title_color"
            android:gravity="center"
            android:text="兴趣"/>

        <TextView
            android:id="@+id/p_tvxq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/un_title_color"
            android:layout_toLeftOf="@+id/lay3_iv1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/i3_i1"
            android:singleLine="true"
            android:gravity="center_vertical|right"/>

        <ImageView
            android:id="@+id/lay3_iv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_arrow_into"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_link"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lay3_rlqm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/i3_i2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/title_color"
            android:gravity="center"
            android:text="签名"/>
        <TextView
            android:id="@+id/p_tvqm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/un_title_color"
            android:layout_toLeftOf="@+id/lay3_iv2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/i3_i2"
            android:singleLine="true"
            android:gravity="center_vertical|right"/>
        <ImageView
            android:id="@+id/lay3_iv2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_arrow_into"/>
    </RelativeLayout>
</LinearLayout>