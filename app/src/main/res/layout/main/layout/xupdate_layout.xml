<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <TextView
            android:id="@+id/update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/title_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/update_vername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/title_color" />
        <TextView
            android:id="@+id/update_tvcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="3dp"
            android:maxLines="6"
            android:scrollbars="vertical"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/update_ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/update_cancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/un_title_color"
                    android:gravity="center"
                    android:text="以后再说"/>
                <TextView
                    android:id="@+id/update_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_update_five"
                    android:textColor="@color/white"
                    android:text="立即更新"/>
            </LinearLayout>
            <TextView
                android:id="@+id/update_ha_tv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/bg_update_five"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:text="立即更新"/>
            <TextView
                android:id="@+id/update_load"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>