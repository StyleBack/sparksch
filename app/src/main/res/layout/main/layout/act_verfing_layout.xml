<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="157dp"
        android:scaleType="fitXY"
        android:layout_marginTop="75dp"
        android:src="@mipmap/verfing_top1_icon"/>
    <TextView
        android:id="@+id/ving_tvwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_color"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/msg_xx_color"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/verfing_ms"/>

    <TextView
        android:id="@+id/ving_tvk"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/bg_login_btn"
        android:text="确定"/>

    <TextView
        android:id="@+id/ving_tvcvi"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/bg_btn_ving"
        android:text="催一下"/>
</LinearLayout>