<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/wr_rlm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/wr_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/wr_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/write_bg"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:inputType="none"
                android:lines="8"
                android:padding="5dp"
                android:maxLength="300"
                android:textSize="15sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <LinearLayout
                    android:id="@+id/wr_lltopic"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:background="@mipmap/icon_topic_bg"
                    android:visibility="gone"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp">
                    <ImageView
                        android:id="@+id/wr_ivd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_blogwrite_topic_delte"/>

                    <TextView
                        android:id="@+id/wr_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="失物招领"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/wr_tx_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/new_color"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/un_title_color"
                        android:text="/300"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/wr_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wr_ll"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"/>

        <com.doschool.ahu.appui.writeblog.widget.WriteKeybordBox
            android:id="@+id/wr_wkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>