<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/operat_lllove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/operat_ivlove"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_love_un"/>
        <TextView
            android:id="@+id/operat_tvlove_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/un_title_color"
            android:layout_marginLeft="5dp"
            android:text="0k"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/operat_llcomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/operat_lllove"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/operat_ivcomm"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_comment"/>
        <TextView
            android:id="@+id/operat_tvcomm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/un_title_color"
            android:layout_marginLeft="5dp"
            android:text="0k"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operat_lll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/operat_llcomm"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/operat_ivll"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_liulan"/>
        <TextView
            android:id="@+id/operat_tvcomm_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/un_title_color"
            android:layout_marginLeft="5dp"
            android:text="0k"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operat_lka"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/operat_kac"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_tv_comm"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="咔嚓"/>
    </LinearLayout>
</RelativeLayout>