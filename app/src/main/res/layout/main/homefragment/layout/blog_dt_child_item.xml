<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:descendantFocusability="blocksDescendants">
    <View
        android:id="@+id/dt_child_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_link"/>
    <RelativeLayout
        android:id="@+id/child_dtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/dt_child_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/dt_child_iv">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/dt_child_lll">
                <TextView
                    android:id="@+id/dt_child_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/now_txt_color"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/app_name"
                    />
                <ImageView
                    android:id="@+id/dt_child_ivfy"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/dt_child_name"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/dt_child_ivsex"
                        android:layout_width="26dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="3dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/dt_child_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/un_title_color"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/dt_chd_tvrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/un_title_color"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                />
            <LinearLayout
                android:id="@+id/dt_child_lll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/dt_child_love"
                    android:layout_width="15dp"
                    android:layout_height="13.2dp"
                    android:src="@mipmap/icon_love_un"/>
                <TextView
                    android:id="@+id/dt_child_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/un_title_color"
                    android:layout_marginLeft="5dp"
                    android:text="0"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/dt_child_iv"
            android:layout_below="@+id/dt_child_iv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/dt_child_comt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="14sp"
                android:text="@string/empty_text"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dt_child_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>