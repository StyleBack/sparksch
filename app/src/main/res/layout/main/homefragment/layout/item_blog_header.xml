<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp">
    <ImageView
        android:id="@+id/blog_ivhead"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/app_launcher"/>
    <LinearLayout
        android:id="@+id/blog_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/blog_ivhead"
        android:layout_toLeftOf="@+id/blog_ivfun"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/blog_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/now_txt_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="@string/app_name"/>
        <ImageView
            android:id="@+id/blog_ividentify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blog_ll1"
        android:layout_below="@+id/blog_ll1"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/blog_ivsex"
            android:layout_width="26dp"
            android:layout_height="13dp"
            android:layout_marginRight="3dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/blog_tvyx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/un_title_color"
            android:text="时间  院系"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/blog_ivfun"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fun_bg"
        android:src="@mipmap/icon_fun_black"/>
</RelativeLayout>