<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/atuser_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/atuser_iv_head"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <LinearLayout
        android:id="@+id/atu_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/atuser_iv_head"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/atuser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/content_txt_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/atu_ivor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atu_l1"
        android:layout_below="@+id/atu_l1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/atu_ivbs"
            android:layout_width="26dp"
            android:layout_height="13dp"
            android:layout_marginRight="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/atu_txy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/un_title_color"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>