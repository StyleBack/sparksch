<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sharedialog_bg"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nest_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/parent_ll_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@mipmap/share_view_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/shareview_top_bg" />

                    <LinearLayout
                        android:id="@+id/share_coll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="162dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:background="@drawable/shareview_ne_bg"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/share_tvname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:gravity="center"
                                    android:textColor="@color/shareview_tc_color"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/share_tvcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="17sp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true">

                                <RelativeLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/login_top_head">

                                    <ImageView
                                        android:id="@+id/share_ivhead"
                                        android:layout_width="65dp"
                                        android:layout_height="65dp"
                                        android:layout_centerInParent="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="35dp"
                                    android:layout_height="22dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shareview_ka_whi">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/share_ka_tx"
                                        android:gravity="center"
                                        android:text="发起"
                                        android:textColor="@color/title_color"
                                        android:textSize="10sp" />

                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="25dp">

                            <LinearLayout
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1.5dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="2dp"
                                    android:background="@drawable/share_line_wt" />

                                <View
                                    android:layout_width="9dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/share_line_half" />

                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="2dp"
                                    android:background="@drawable/share_line_wt" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginRight="11dp"
                                android:text="实时战况"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1.5dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="2dp"
                                    android:background="@drawable/share_line_wt" />

                                <View
                                    android:layout_width="9dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/share_line_half" />

                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="2dp"
                                    android:background="@drawable/share_line_wt" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/sk_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginRight="18dp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="33dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="13dp"
                                android:src="@mipmap/share_icon_win"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/share_llrm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="1.5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="18dp"
                                        android:layout_height="2dp"
                                        android:background="@drawable/share_line_wt" />

                                    <View
                                        android:layout_width="9dp"
                                        android:layout_height="2dp"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:background="@drawable/share_line_half" />

                                    <View
                                        android:layout_width="18dp"
                                        android:layout_height="2dp"
                                        android:background="@drawable/share_line_wt" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="11dp"
                                    android:layout_marginRight="11dp"
                                    android:text="热门评论"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="1.5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="18dp"
                                        android:layout_height="2dp"
                                        android:background="@drawable/share_line_wt" />

                                    <View
                                        android:layout_width="9dp"
                                        android:layout_height="2dp"
                                        android:layout_gravity="left"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:background="@drawable/share_line_half" />

                                    <View
                                        android:layout_width="18dp"
                                        android:layout_height="2dp"
                                        android:background="@drawable/share_line_wt" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rm_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="21dp"
                                android:layout_marginRight="18dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/share_coll"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="37dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/share_erm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="20dp"
                            android:text="扫描上方二维码参与投票吧"
                            android:textColor="@color/shareview_tc_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/share_tvbtn"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:background="@drawable/share_iv_btn"
            android:gravity="center"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="保存图片"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>