<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/single_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_behavior="com.doschool.ahu.appui.home.widget.FixAppBarLayoutBehavior">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/single_bgiv"
                        android:layout_width="match_parent"
                        android:layout_height="255dp"
                        android:background="@color/new_color"
                        android:foreground="@color/for_trans"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="70dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">
                        <RelativeLayout
                            android:id="@+id/single_rl_hiv"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_centerHorizontal="true">
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/login_top_head">
                                <ImageView
                                    android:id="@+id/single_head"
                                    android:layout_width="95dp"
                                    android:layout_height="95dp"
                                    android:scaleType="centerCrop"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <ImageView
                                android:id="@+id/single_sex"
                                android:layout_width="26dp"
                                android:layout_height="13dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="2dp" />
                            <ImageView
                                android:id="@+id/single_org"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/single_rl_hiv"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/single_zh_zero"
                                    android:layout_width="26dp"
                                    android:layout_height="31dp"
                                    android:src="@mipmap/single_group_icon"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:id="@+id/single_tvz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:text="获赞"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/single_rl_hiv"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/single_bbt_zero"
                                    android:layout_width="26dp"
                                    android:layout_height="31dp"
                                    android:visibility="gone"
                                    android:src="@mipmap/single_group_icon"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:id="@+id/single_tvbt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:text="棒棒糖"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="235dp"
                        android:background="@drawable/single_drw_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/single_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/title_color"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/un_title_color"
                                    android:textSize="13sp"
                                    android:text="粉丝"/>
                            </LinearLayout>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="45dp"
                                android:background="@color/grey_link"
                                android:layout_gravity="center_vertical"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/single_zgs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/title_color"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/un_title_color"
                                    android:textSize="13sp"
                                    android:text="关注"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/grey_link" />
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/single_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:title="@null">

                    <LinearLayout
                        android:id="@+id/single_bar_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp">
                        <include layout="@layout/single_toolbar" />
                        <View
                            android:id="@+id/single_line"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">
                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/single_tab_magic"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_link"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/single_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:overScrollMode="never"/>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/single_bmll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:id="@+id/single_gzli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_login_btn">
            <ImageView
                android:id="@+id/single_gziv"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_guzu_icon"/>
            <TextView
                android:id="@+id/single_gztv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="加关注"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/single_bbt_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/bbt_lolip_icon"/>
        <LinearLayout
            android:id="@+id/single_msgll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_login_btn">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:src="@mipmap/add_layi_icon"/>
            <TextView
                android:id="@+id/single_msgtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="聊一聊"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>