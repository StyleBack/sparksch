<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pt_topbg"
        android:layout_width="wrap_content"
        android:layout_height="285dp">

        <ImageView
            android:id="@+id/pt_ivbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/new_color"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/for_trans"/>

        <RelativeLayout
            android:id="@+id/pt_rln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="69dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/pt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/ptt_ivsex"
                android:layout_width="26dp"
                android:layout_height="13dp"
                android:layout_alignBottom="@+id/pt_name"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@+id/pt_name" />

            <ImageView
                android:id="@+id/ptt_ivorg"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/pt_name" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tp_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pt_rln"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获赞"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tp_zanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tp_lin"
            android:layout_toRightOf="@+id/tp_lin"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="棒棒糖"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tp_bbt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp_lin"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pt_txsig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="个性签名：暂无"
                android:textColor="@color/tx_sig_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pt_txxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="兴趣爱好：暂无"
                android:textColor="@color/tx_sig_color"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pt_txnj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/tx_sig_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pt_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/pt_topbg"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pt_txgz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:textColor="@color/un_title_color"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pt_ivhead"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/pt_ll"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />
</RelativeLayout>