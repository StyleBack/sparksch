<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/topic_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_confessionboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="表白墙"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_lost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_lost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="失物招领"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_advice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="意见建议"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_market" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="闲置出售"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/topic_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="有问必答"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_report" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="我在现场"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_joke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_joke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="段子专区"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/squaretopic_icon_work" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="兼职实习"
                android:textColor="@color/grey2"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>