<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:background="@color/white"
    android:id="@+id/top_rl"
    android:visibility="gone">

    <ImageView
        android:id="@+id/top_ivhead"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/app_launcher"/>

    <TextView
        android:id="@+id/top_tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="13sp"
        android:textColor="@color/title_color"
        android:layout_toRightOf="@+id/top_ivhead"
        android:layout_marginLeft="8dp"
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/top_tvmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/un_title_color"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/top_tvname"
        android:text="@string/blog_fixed_top"/>
    <TextView
        android:id="@+id/top_tvxdj"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/bg_xdj"
        android:visibility="gone"
        android:text="@string/blog_xdj_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_link"/>
</RelativeLayout>