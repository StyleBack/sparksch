<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/white"
    android:id="@+id/line_l2"
    android:padding="12dp">

    <ImageView
        android:id="@+id/line_bgiv2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@mipmap/app_launcher"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/line_bgiv2"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/line_txi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/title_color"
            android:textSize="16sp"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/line_txi2"
            android:layout_below="@+id/line_txi2"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/line_txlab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_line_icon"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="10sp"
                android:gravity="center"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/line_txtime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/un_title_color"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/em_time"/>
        </LinearLayout>

        <TextView
            android:id="@+id/line_txauthor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignLeft="@+id/line_txi2"
            android:textColor="@color/un_title_color"
            android:textSize="13sp"
            android:layout_alignParentBottom="true"
            android:text="@string/app_name"/>
    </RelativeLayout>

</RelativeLayout>