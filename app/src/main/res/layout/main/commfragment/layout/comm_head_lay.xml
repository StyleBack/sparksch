<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp">

        <LinearLayout
            android:id="@+id/msg_llleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_comm_me" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/em_tx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="@color/content_txt_color"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/dot_tpl"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_toRightOf="@+id/em_tx1"
                    android:background="@drawable/msg_dot_icon"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/moment_red_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:minWidth="18dp"
            android:layout_alignBottom="@+id/cvs_m_img"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/bg_cvs_count"
            android:layout_marginLeft="30dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <LinearLayout
            android:id="@+id/msg_llright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_love_me" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/em_tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞我"
                    android:textColor="@color/content_txt_color"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/dot_tzan"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/em_tx2"
                    android:background="@drawable/msg_dot_icon" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/love_red_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:minWidth="18dp"
            android:layout_alignBottom="@+id/cvs_m_img"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/bg_cvs_count"
            android:layout_marginLeft="30dp"
            android:visibility="gone"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="58dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/notice_llmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_notice_me" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/em_tx3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知"
                    android:textColor="@color/content_txt_color"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/dot_tzhi"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/em_tx3"
                    android:background="@drawable/msg_dot_icon" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/notice_red_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:minWidth="18dp"
            android:layout_alignBottom="@+id/cvs_m_img"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/bg_cvs_count"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>