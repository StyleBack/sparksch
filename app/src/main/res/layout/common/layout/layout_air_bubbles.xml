<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/linear_map_air"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_small_air"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/iv_airbubbles"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/head_me" />

        <TextView
            android:id="@+id/tv_airbubbles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:text="我们在这里认识的"
            android:textSize="15dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_map_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/map_picture"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_map_video"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/map_video"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_map_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/map_picture"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
