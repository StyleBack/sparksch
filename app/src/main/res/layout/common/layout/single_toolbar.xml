<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="44dp"
    android:background="@android:color/transparent"
    android:id="@+id/single_rl">
    <ImageView
        android:id="@+id/single_back"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:src="@mipmap/back_white"/>

    <TextView
        android:id="@+id/single_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/title_color"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/single_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:src="@mipmap/icon_function_white"/>
</RelativeLayout>